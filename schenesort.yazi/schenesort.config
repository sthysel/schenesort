# ExifTool configuration for Schenesort XMP namespace
# Install to: ~/.config/ExifTool/schenesort.config
#
# This file defines the custom XMP namespace used by Schenesort
# for storing wallpaper metadata in sidecar files.

%Image::ExifTool::UserDefined = (
    'Image::ExifTool::XMP::Main' => {
        schenesort => {
            SubDirectory => {
                TagTable => 'Image::ExifTool::UserDefined::schenesort',
            },
        },
    },
);

%Image::ExifTool::UserDefined::schenesort = (
    GROUPS => { 0 => 'XMP', 1 => 'XMP-schenesort', 2 => 'Image' },
    NAMESPACE => { 'schenesort' => 'http://github.com/sthysel/schenesort/' },
    WRITABLE => 'string',

    # AI-generated scene description
    scene => { },

    # Visual mood/atmosphere (comma-separated list)
    mood => {
        List => 'Bag',
    },

    # Art/photography style
    style => { },

    # Dominant colors (comma-separated list)
    colors => {
        List => 'Bag',
    },

    # Time of day depicted
    time_of_day => {
        Name => 'TimeOfDay',
    },

    # Primary subject category
    subject => { },

    # AI model used for analysis
    ai_model => {
        Name => 'AiModel',
    },
);

1;  # End of config (required for Perl)
